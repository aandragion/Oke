<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#029DDE"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:text="DAFTAR"
        android:textAlignment="center"
        android:textColor="#E7FFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"

        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/t_nama"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="8dp"
                android:text="Username"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#DBFAFE"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/v_nama"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/t_nama"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/t_nama"
                android:background="@drawable/roundedcorner"
                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/v_email"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_nama"
                android:layout_alignStart="@+id/t_nama"
                android:layout_marginStart="0dp"
                android:layout_marginTop="21dp"
                android:text="Email"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#DBFAFE"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/t_email"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/v_email"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/v_email"
                android:background="@drawable/roundedcorner"
                android:hint="Email"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/v_alamat"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_email"
                android:layout_alignStart="@+id/v_email"
                android:layout_marginStart="0dp"
                android:layout_marginTop="21dp"
                android:text="Alamat"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#DBFAFE"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/t_alamat"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/v_alamat"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/v_alamat"
                android:background="@drawable/roundedcorner"
                android:hint="Alamat"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/v_tlp"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_alamat"
                android:layout_alignStart="@+id/v_alamat"
                android:layout_marginStart="0dp"
                android:layout_marginTop="21dp"
                android:text="No Tlp"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#DBFAFE"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/t_tlp"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/v_tlp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/v_tlp"
                android:background="@drawable/roundedcorner"
                android:hint="No Tlp"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/v_pass"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_tlp"
                android:layout_alignStart="@+id/v_tlp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="21dp"
                android:text="Password"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#DBFAFE"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/t_pass"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/v_pass"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/v_pass"
                android:background="@drawable/roundedcorner"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="30dp"
                android:textAlignment="center" />

            <cyd.awesome.material.AwesomeText
                android:id="@+id/ImgShowPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/t_pass"
                android:layout_alignEnd="@+id/t_pass"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:gravity="center"
                android:textColor="#029DDE"
                android:textSize="20dp"
                app:awesome_font="material_design"
                app:awesome_icon="MD_VISIBILITY_OFF" />

            <TextView
                android:id="@+id/v_rpass"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_pass"
                android:layout_alignStart="@+id/v_pass"
                android:layout_marginStart="0dp"
                android:layout_marginTop="21dp"
                android:text="Re-Password"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#DBFAFE"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/t_rpass"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/v_rpass"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/v_rpass"
                android:background="@drawable/roundedcorner"
                android:hint="Re-Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="30dp"
                android:textAlignment="center" />

            <cyd.awesome.material.AwesomeText
                android:id="@+id/ImgShowPassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/t_rpass"
                android:layout_alignEnd="@+id/t_rpass"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:gravity="center"
                android:textColor="#029DDE"
                android:textSize="20dp"
                app:awesome_font="material_design"
                app:awesome_icon="MD_VISIBILITY_OFF" />


            <Button
                android:id="@+id/b_daftar"
                android:layout_width="101dp"
                android:layout_height="44dp"
                android:layout_below="@+id/t_rpass"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/roundedcorner"
                android:text="DAFTAR"
                android:textColor="#049EDE"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="-3dp"
                android:background="#049EDE"
                android:onClick="Login"
                android:paddingLeft="5dp"
                android:text="Sudah mempunyai akun"
                android:textColor="#E7FFFF" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>