<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <Button
        android:id="@+id/detailtras"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded"
        android:text="Detail Transfer"
        android:textColor="#E7FFFF"
        android:textSize="15dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded"
        android:text="Simpan"
        android:textColor="#E7FFFF"
        android:textSize="15dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/l_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detailtras"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        >



    <ImageView
        android:id="@+id/qr_bukti"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_bukti"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/total_bukti"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded"
                android:text="Beri Rating"
                android:textColor="#E7FFFF"
                android:textSize="15dp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="0dp"
                    android:paddingLeft="7dp"
                    android:text="Nonton"
                    android:textColor="#E7FFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tgl_nonton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="0dp"
                    android:paddingLeft="7dp"
                    android:text="Tanggal"
                    android:textColor="#E7FFFF"
                    android:textSize="16dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel"
                android:layout_alignStart="@+id/rel"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:text="Nama Film" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm_film_bukti"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:text="Kursi" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_duduk_bukti"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:text="Studio" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studio_psn_bukti"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:text="Jam" />

            <TextView
                android:id="@+id/jam_bukti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studio_psn_bukti"
                android:layout_alignEnd="@+id/studio_psn_bukti"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/textView15"
                android:text="JAM" />

            <TextView
                android:id="@+id/nm_film_bukti"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignEnd="@+id/rel"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="12dp"
                android:layout_toEndOf="@+id/textView3"
                android:text="jdl film" />

            <TextView
                android:id="@+id/t_duduk_bukti"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm_film_bukti"
                android:layout_alignEnd="@+id/nm_film_bukti"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"

                android:layout_toEndOf="@+id/textView4"
                android:text="tempat duduk" />

            <TextView
                android:id="@+id/studio_psn_bukti"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_duduk_bukti"
                android:layout_alignEnd="@+id/t_duduk_bukti"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/textView5"
                android:text="studio" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jam_bukti"
                android:layout_alignStart="@+id/rel"
                android:layout_alignEnd="@+id/rel"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/rounded"
                android:paddingLeft="7dp"
                android:text="Rincian Harga"
                android:textColor="#E7FFFF"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:text="Jumlah Kursi" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jml_psn_bukti"
                android:layout_alignStart="@+id/textView9"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:text="Harga" />


            <TextView
                android:id="@+id/jml_psn_bukti"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignEnd="@+id/textView9"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:layout_toEndOf="@+id/textView10"
                android:text="jml" />

            <TextView
                android:id="@+id/hrg_psan_bukti"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jml_psn_bukti"
                android:layout_alignEnd="@+id/jml_psn_bukti"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/textView11"
                android:text="harga" />

            <TextView
                android:id="@+id/total_bukti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis"
                android:layout_alignEnd="@+id/textView9"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:text="Total"
                android:textStyle="bold" />

            <View
                android:id="@+id/garis"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:background="#bbb" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/status_bukti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="Status"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tgl_bukti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Tanggal"
        android:textSize="10sp" />

    </RelativeLayout>
</RelativeLayout>